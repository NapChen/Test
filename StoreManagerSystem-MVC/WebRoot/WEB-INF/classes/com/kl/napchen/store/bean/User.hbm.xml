<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.kl.napchen.store.bean.User" table="t_user">
		<id name="id" type="java.lang.Long">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="uid" type="java.lang.String">
			<column name="uid" length="128" />
		</property>
		<property name="nickName" type="java.lang.String">
			<column name="nick_name" length="128" />
		</property>
		<property name="name" type="java.lang.String">
			<column name="name" length="128" />
		</property>
		<property name="password" type="java.lang.String">
			<column name="password" length="128" />
		</property>
		<property name="age" type="java.lang.Integer">
			<column name="age" />
		</property>
		<property name="email" type="java.lang.String">
			<column name="email" length="128" />
		</property>
		<property name="sex" type="java.lang.Integer">
			<column name="sex" />
		</property>
		<property name="createTime" type="java.sql.Timestamp">
			<column name="create_time" />
		</property>
		<property name="permitIn" type="java.lang.Integer">
			<column name="permit_in" />
		</property>
		<property name="permitOut" type="java.lang.Integer">
			<column name="permit_out" />
		</property>
		<property name="permitQuery" type="java.lang.Integer">
			<column name="permit_query" />
		</property>
		<property name="permitAdmin" type="java.lang.Integer">
			<column name="permit_admin" />
		</property>
		<property name="permitAddType" type="java.lang.Integer">
			<column name="permit_add_type" />
		</property>
		<property name="permitAddProduct" type="java.lang.Integer">
			<column name="permit_add_product" />
		</property>
	</class>
</hibernate-mapping>
